                <input type="submit" name="ara" value="Arama Yap" class="btn btn-primary pull-right"><br><br>
                <a class="btn btn-primary pull-right" href="/Arizalar/Index/">Kayıtlara Dön</a>

            </div>

        </div>

    }
    <br />
    <div class="row">


        <div class="col-lg-12">

            <div class="table-responsive">


                <table class="table table-bordered table-hover">
                    <thead>
                        <tr class="bg-info">

                            <th class="col-md-2" align="center">
                                @Html.DisplayNameFor(model => model.First().MakineKodu)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().BaslangicTarihi)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().Ilk1)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().ArizaBildiren)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().ArizaMudahaleTarihi)
                            </th>
                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().MudahaleSaati)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().ArizaAciklama)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().ArizaNedeni)
                            </th>

                            <th class="center" align="center">
                                @Html.DisplayNameFor(model => model.First().YapilanMudahale)
                            </th>

                            <th class="center">
                                @Html.DisplayNameFor(model => model.First().MudahaleAciklama)
                            </th>
                            <th class="center">
                                @Html.DisplayNameFor(model => model.First().KullanilanMalzeme)
                            </th>

                            <th class="center">
                                @Html.DisplayNameFor(model => model.First().Malbeklemesuresi)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().BitisTarihi)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().Son1)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().BakimYapan)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().MudahaleSuresi)
                            </th>

                            <th align="center">
                                @Html.DisplayNameFor(model => model.First().GecenSure)
                            </th>

                            <th align="center">
                                <font color="#FFFFFF">
                                    Güncelle
                                </font>
                            </th>
                            @*<th align="center">
            <font color="#FFFFFF">
                Sil
            </font>
        </th>*@

                            <th>
                                Arıza Fotoğraf Ekle/Gör
                            </th>

                        </tr>
                    </thead>

                    @if (Model.Count() == 0)
                    {
                        ViewBag.Mesaj = "Kullanıcı Bulunamadı.";

                    }

                    else
                    {


                        foreach (var item in Model)
                        {
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.MakineKodu)
                    </td>



                    <td>
                        @(item.BaslangicTarihi.ToString("dd/MM/yyyy"))
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Ilk1)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ArizaBildiren)
                    </td>


                    <td>
                        @(item.ArizaMudahaleTarihi.ToString("dd/MM/yyyy"))
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MudahaleSaati)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.ArizaAciklama)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.ArizaNedeni)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.YapilanMudahale)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MudahaleAciklama)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KullanilanMalzeme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Malbeklemesuresi)
                    </td>
                    <td>
                        @(item.BitisTarihi.ToString("dd/MM/yyyy"))
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Son1)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BakimYapan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MudahaleSuresi)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.GecenSure)
                    </td>

                    <td>
                        @Html.ActionLink("Güncelle", "Duzelt", new { id = item.id }, new { @class = "btn btn-primary btn" })
                    </td>

                    @*<td>
            @Html.ActionLink("Sil", "sil", new { id = item.id }, new { @class = "btn btn-danger ", onclick = "return confirm('" + "* " + @item.MakineKodu + "  *  kaydı silinsin mi?')" })
        </td>*@

                    <td>
                        @Html.ActionLink("Gözat", "resimler", new { sayfaid = item.id }, new { @class = "btn btn-warning" })

                    </td>

                </tr>
                        }
                    }

                </table>

            </div>
        </div>
    </div>



</div>

