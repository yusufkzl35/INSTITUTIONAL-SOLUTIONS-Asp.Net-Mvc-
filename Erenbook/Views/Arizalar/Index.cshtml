    @using (Html.BeginForm("index", "Arizalar"))
    {
        <div class="pull-right col-md-8" style="margin-top:25px;">

            <div class="col-md-5">
                <input type="text" class="form-control pull-right" placeholder="Makine Kodu Gir" name="aranan">
            </div>

            <br />



